<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">

  <!-- Run CreateCampaignUsingMandatory on Edge -->
  <test name="EdgeTest" thread-count="1" parallel="tests">
    <parameter name="BROWSER" value="edge"/>
    <classes>
      <class name="DataDrivenTesting.CreateCampaignUsingMandatory"/>
    </classes>
  </test>

  <!-- Run CreateCampaignUsingStatus on Chrome -->
  <test name="ChromeTest" thread-count="1" parallel="tests">
    <parameter name="BROWSER" value="firefox"/>
    <classes>
      <class name="DataDrivenTesting.CreateCampaignUsingStatus"/>
    </classes>
  </test>

</suite>
